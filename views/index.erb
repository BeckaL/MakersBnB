<p>Welcome to MakersBnB: <%= @user %></p>

<% if @user %>
<form action="/sign_out" method="post">
  <input type = "submit" name="sign out" value = "sign out">
</form>
<form action="/new_listing" method="get">
  <input type = "submit" name="create new listing" value = "create new listing">
</form>
<% else %>
<form action="/sign_up" method="get">
  <input type = "submit" name="sign up" value = "sign up">
</form>
<form action="/log_in" method="get">
  <input type = "submit" name="log in" value = "log in">
</form>
<% end %>
