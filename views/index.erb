<%= erb :html_head %>
<%= erb :navbar_partial %>

<p>Welcome to MakersBnB: <%= session[:current_user] %></p>

<% if session[:current_user] %>
<form action="/sign_out" method="post">
  <input class="button" type="submit" name="sign out" value="sign out">
</form>
<form action="/new_listing" method="get">
  <input id="create-new-listing-button" class="button" type="submit" name="create new listing" value="create new listing">
</form>
<% else %>
<form action="/sign_up" method="get">
  <input class="button" type="submit" value="sign up">
</form>
<form action="/log_in" method="get">
  <input class="button" type="submit" value="log in">
</form>
<% end %>
