
<!DOCTYPE html>
  <html lang="en">
  <head>
  </head>
  <body class='landing'>

    <div class="container">
      <%= erb :html_head %>
      <%= erb :navbar_partial %>

      <ul style="list-style: none;">
        <% @listings.each do |listing| %>
          <li>
            <a href="/listings/<%= listing.listing_id %>">
              <%= listing.name %>
            </a>
          </li>
        <% end %>
      </ul>
      <% if session[:current_user] %>
        <form action="/new_listing" method="get">
          <input type="submit" name="create new listing" value="create new listing">
        </form>
      <% end %>
      <%= flash[:notice] %>

    </div>
  </body>
</html>
